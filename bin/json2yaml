#!/usr/bin/env ruby
# frozen_string_literal: true

require 'json'
require 'yaml'

def json2yaml(str)
  YAML.dump(JSON.parse(str))
end

from = ARGV[0]
if from && File.exist?(from)
  to = ARGV[1] || "#{from.chomp('.json')}.yaml"

  File.write(to, json2yaml(File.read(from)))
elsif from
  puts json2yaml(from)
elsif !$stdin.tty? && !$stdin.closed?
  puts json2yaml($stdin.read)
end
